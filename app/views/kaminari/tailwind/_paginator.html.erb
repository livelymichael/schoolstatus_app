<div class="flex justify-center mt-6 space-x-4">  <!-- Centered controls with space between -->
  <% if @persons.respond_to?(:prev_page) && @persons.prev_page.present? %>  <!-- Check for previous page -->
    <%= link_to 'Previous', url_for(page: @persons.prev_page), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300" %>
  <% else %>  <!-- Disabled previous link -->
    <span class="px-4 py-2 bg-gray-300 text-gray-600 rounded">Previous</span>
  <% end %>

  <% (1..@persons.total_pages).each do |page| %>  <!-- Page numbers with emphasis on current -->
    <%= link_to page, url_for(page: page), class: "px-4 py-2 #{page == @persons.current_page ? 'bg-blue-500 text-white' : 'bg-white text-gray-600 hover:bg-gray-100'} rounded transition duration-300" %>
  <% end %>

  <% if @persons.respond_to?(:next_page) && @persons.next_page.present? %>  <!-- Check for next page -->
    <%= link_to 'Next', url_for(page: @persons.next_page), class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition duration-300" %>
  <% else %>  <!-- Disabled next link -->
    <span class="px-4 py-2 bg-gray-300 text-gray-600 rounded">Next</span>
  <% end %>
</div>

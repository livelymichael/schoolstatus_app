<div class="container mx-auto p-4">  <!-- Centered container with padding -->
  <div class="bg-white p-6 rounded-lg shadow-lg">  <!-- Card styling -->

    <!-- Person name as the card title -->
    <h1 class="text-3xl font-bold mb-4"><%= @person.name %></h1>

    <!-- Address section -->
    <p class="text-gray-700">Address: <%= @person.address %></p>

    <!-- Back to list link -->
    <%= link_to 'Back to list', persons_path, class: "text-blue-500 hover:underline mt-4 inline-block" %>  <!-- Styled link -->

  </div>
</div>

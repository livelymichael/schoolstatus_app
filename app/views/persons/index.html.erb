<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">List of People</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @persons.each do |person| %>
      <div class="bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-xl font-semibold mb-2"><%= person.name %></h2>
        <p class="text-gray-700">Address: <%= person.address %></p>
        <%= link_to 'View Details', person_path(person), class: "text-blue-500 hover:underline mt-4 inline-block" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-center">
    <%= paginate @persons, theme: 'tailwind' %>
  </div>
</div>
